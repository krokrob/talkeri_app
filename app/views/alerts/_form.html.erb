<%= simple_form_for [chatroom, alert] do |f| %>
  <%= f.text_area :content, class: "form-control input-alert-round margin-none", data: {textarea: "alert"} %>
  <%= f.submit "Set Alert", class: "button-pink white font-size-regular font-weight-regular button-border-none padding-height-small padding-sides-huge margin-top-small", style: "display: true", data: {send: "alert"} %>
<% end %>

