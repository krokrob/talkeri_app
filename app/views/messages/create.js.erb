function scrollMessages() {
  const messagesContainer = document.querySelectorAll('.message');
  if (messagesContainer.length > 0) {
    const messages = document.querySelectorAll('.message');
    const lastMessage = messages[messages.length - 1];
    if (lastMessage) {
      lastMessage.scrollIntoView();
    }
  }
}

function refreshForm(innerHTML) {
  const textarea = document.getElementById('message_content');
  textarea.value = "";
}

function addMessage(messageHTML) {
  const messages = document.getElementById('msg-list');
  messages.insertAdjacentHTML('beforeend', messageHTML);
}

<% if @message.errors.any? %>
refreshForm();
<% else %>
  addMessage('<%= j render "messages/message", message: @message %>');
  refreshForm();
