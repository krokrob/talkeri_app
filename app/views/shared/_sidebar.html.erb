<% if user_signed_in? %>
  <div class="sidebar-collapse" id="sidebar">
    <div class="container">
      <div class="row">
        <br>
        <div class="col-xs-12" style="border-bottom: 0.5px solid lightgrey" >
          <%= cl_image_tag current_user.photo, class: "avatar-small position-absolute"%>
          <div class="text-center" style='margin-left: 26px;  margin-top: 6px; margin-bottom: 17px; color: black;'>
            <%= current_user.full_name %>
          </div>
        </div>
      </div>
      <div>
      <% current_user.events.each do |event| %>
      <h4 class="text-center" style="margin-top: 15px; margin-bottom: 25px; color: #724cf9;"><i class="far fa-calendar-alt"></i><%= event.name.upcase %></h4>
      </div>

      <div class="content-sidebar">
      <h4 style="margin-top: 15px; margin-bottom: 20px;">SERVICES</h4>
      <div style="padding-left: 16px;">
      <h5><i class="far fa-user"></i> My staff</h5>
      <h5><i class="fas fa-wrench"></i> Settings</h5>
      </div>
      <h4 style="margin-top: 25px;">CHANNELS</h4>

        <% event.chatrooms.each do |chatroom| %>
          <% unless chatroom.name.nil? %>
            <div class="chatrooms-toggle">
              <h5 class="flexbox flexbox-align-center">
                <%= link_to "##{chatroom.name}", chatroom_path(chatroom) %>
                <% if Message.unread_by(current_user).where(chatroom: chatroom).count > 0%>
                  <div class="notification position-relative">
                    <p class="font-size-small white position-absolute">2</p>
                  </div>
                <% end  %>
              </h5>
            </div>
          <% end %>
        <% end %>
      <h4 style="margin-top: 25px;">PRIVATE CHANNELS</h4>
        <% event.chatrooms.each do |chatroom| %>
          <% if chatroom.name.nil? %>
            <div class="chatrooms-toggle">
              <h5 class="flexbox flexbox-align-center">
                <%= link_to "##{chatroom.users.select { |user| user.id != current_user.id }.first.first_name}", chatroom_path(chatroom) %>
                <% if Message.unread_by(current_user).where(chatroom: chatroom).count > 0%>
                  <div class="notification position-relative">
                    <p class="font-size-small white position-absolute">Message.unread_by(current_user).where(chatroom: chatroom).count</p>
                  </div>
                <% end  %>
              </h5>
            </div>
          <% end %>
        <% end %>
      <% end %>

      </div>
    </div>
  </div>
<% end %>
