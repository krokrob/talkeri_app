<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">


      <div class="chat-header">
          <h3>#<%= @chatroom.name %></h3>
        </h4>
      </div>

  <%#= link_to  "Mark as done",  alert_alert_solvers_path(@active_alert), method: :post %>

<%= render 'alerts/form', chatroom: @chatroom, alert: @alert %>


      <div class="chat-instructions">
        <p>Instructions of the day </p>
        <p><%= @chatroom.instructions %></p>
      </div>

      <div class="chat-alert">
        <p><%#= @active_alert.content %> / Solved <%#= @active_alert.status %></p>
      </div>

      <div class="messages">
        <% @messages.each do |message| %>
          <%= render 'messages/message', message: message %>
        <% end %>
      </div>

      <div id="create-message">
          <%= render 'messages/form', message: @message, chatroom: @chatroom %>
      </div>

      <div id="chatroom-users">
        <% @chatroom.users.select { |u| u != current_user }.each do |user| %>
          <%= link_to event_chatrooms_path(@chatroom.event, user_id: user.id, main_chatroom_id: @chatroom.id), method: :post do %>
            <%= cl_image_tag user.photo, class: "avatar-normal" %>
          <% end %>
        <% end %>
      </div>

    </div>
  </div>

</div>

<% @current_user_chatrooms.each do |user| %>
  <%= user.name %>
<% end %>
