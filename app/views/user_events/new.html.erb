<h3>Add a team member</h3>
<%= simple_form_for [@event, @user] do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :phone_number %>
  <%= f.input :email %>
  <%= f.input :responsability, collection: UserEvent::RESPONSABILITIES %>
  <%= f.association :chatrooms, as: :check_boxes, include_blank: false, include_hidden: false %>
  <%= f.submit "Add team member", class: "btn-primary" %>
<% end %>

<%= link_to "Back to your event", event_path(@event) %>
